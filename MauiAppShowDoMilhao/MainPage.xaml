    <StackLayout Spacing="10" Margin="10">

        <Button Text="Sortear Fácil" Clicked="Button_Clicked" />

        <Label Text="{Binding Enunciado}" />

        <StackLayout RadioButtonGroup.GroupName="resposta">
            <RadioButton CheckedChanged="RadioButton_CheckedChanged" Content="{Binding Path=Alternativas[0].Descricao}" Value="{Binding Path=Alternativas[0].Correta}" />
            <RadioButton CheckedChanged="RadioButton_CheckedChanged" Content="{Binding Path=Alternativas[1].Descricao}" Value="{Binding Path=Alternativas[1].Correta}" />
            <RadioButton CheckedChanged="RadioButton_CheckedChanged" Content="{Binding Path=Alternativas[2].Descricao}" Value="{Binding Path=Alternativas[2].Correta}" />
            <RadioButton CheckedChanged="RadioButton_CheckedChanged" Content="{Binding Path=Alternativas[3].Descricao}" Value="{Binding Path=Alternativas[3].Correta}" />
        </StackLayout>




        <StackLayout Orientation="Horizontal">
            <Button Text="Parar" />
            <Button Text="Próxima" Clicked="Button_Clicked_Proxima" />
        </StackLayout>
        <RadioButton x:Name="alti"
                     Content="{Binding Path=Altrernativa[1].Descricao}"
                     Value="{Binding Path=Alternativa[1].Correta}"/>

        <RadioButton x:Name="alti"
             Content="{Binding Path=Altrernativa[2].Descricao}"
             Value="{Binding Path=Alternativa[2].Correta}"/>

        <RadioButton x:Name="alti"
             Content="{Binding Path=Altrernativa[3].Descricao}"
             Value="{Binding Path=Alternativa[3].Correta}"/>
